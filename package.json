{
  "name": "cypress-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",

"scripts": {
  "report:clean": "rm -rf cypress/reports && mkdir -p cypress/reports",

"cy:chrome": "cypress run --browser chrome --reporter mochawesome --reporter-options reportDir=cypress/reports,reportFilename=report-chrome,overwrite=false,html=false,json=true",
  "cy:firefox": "cypress run --browser firefox --reporter mochawesome --reporter-options reportDir=cypress/reports,reportFilename=report-firefox,overwrite=false,html=false,json=true",
  "cy:edge": "cypress run --browser edge --reporter mochawesome --reporter-options reportDir=cypress/reports,reportFilename=report-edge,overwrite=false,html=false,json=true",

  "cy:all": "npm run report:clean && npm run cy:chrome && npm run cy:firefox && npm run cy:edge",

  "report:merge": "mochawesome-merge cypress/reports/*/*.json > cypress/reports/mochawesome.json",
  "report:generate": "marge cypress/reports/mochawesome.json --reportDir cypress/reports/html",
  "report": "npm run report:merge && npm run report:generate",
  "cy:open": "npx cypress open"
},
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@testing-library/cypress": "^10.0.3",
    "cypress": "^14.5.4",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "faker": "^6.6.6"
  }
}
